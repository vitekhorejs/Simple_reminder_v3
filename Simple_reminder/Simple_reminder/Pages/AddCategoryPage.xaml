<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simple_reminder.AddCategoryPage"
             Title="Přidat Kategorii">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Order="Primary" Activated="SaveCategory_Clicked" Text="Uložit" Priority="0" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label x:Name="EntryLabel" Text="Název kategorie" TextColor="Black" Margin="15,10,10,-5" FontSize="Medium"></Label>
        <Entry x:Name="name" Margin="10,0,10,0"></Entry>
        <Button x:Name="deleteButton" Text="Odstranit" Clicked="Delete_Button"  BackgroundColor="Black" TextColor="White" Margin="10,0,10,0"></Button>
    </StackLayout>
</ContentPage>