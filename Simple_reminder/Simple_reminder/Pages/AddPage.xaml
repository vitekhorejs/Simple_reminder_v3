<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simple_reminder.AddPage"
             Title="Přidat událost">
    <StackLayout>
        <Entry Placeholder="Název upomínky"></Entry>
        <Picker x:Name="picker" Title="Vyberte Kategorii">
        </Picker>
        <DatePicker></DatePicker>
        <TimePicker></TimePicker>
        <Label Text="Popis"></Label>
        <Editor x:Name="Description" ></Editor>
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Back" Order="Primary" Activated="Back_Clicked" Text="Zpět" Priority="0" />
        <ToolbarItem Name="Save" Order="Primary" Activated="Save_Clicked" Text="Uložit" Priority="0" />
    </ContentPage.ToolbarItems>


</ContentPage>